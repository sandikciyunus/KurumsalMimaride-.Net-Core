@model Proje.Models.ProductListViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}

<div>
    <table id="TblProduct" class="table table-responsive" style="display:table!important">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
                <th>Add To Cart</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add To Cart</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
   $('#TblProduct').DataTable({
"language":{
"url":"//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
}
});
</script>